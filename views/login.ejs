<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/login.css">
</head>
<body>
    <div class="auth-form">
        <h1>Login</h1>
        
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert-danger">
                <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>
        
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" 
                       id="username" 
                       name="username" 
                       class="<%= (typeof errors !== 'undefined' && errors.some(e => e.param === 'username')) ? 'is-invalid' : '' %>"
                       required>
                <% if (typeof errors !== 'undefined') { %>
                    <% const usernameError = errors.find(e => e.param === 'username'); %>
                    <% if (usernameError) { %>
                        <div class="invalid-feedback"><%= usernameError.msg %></div>
                    <% } %>
                <% } %>
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" 
                       id="email" 
                       name="email" 
                       class="<%= (typeof errors !== 'undefined' && errors.some(e => e.param === 'email')) ? 'is-invalid' : '' %>"
                       required>
                <% if (typeof errors !== 'undefined') { %>
                    <% const emailError = errors.find(e => e.param === 'email'); %>
                    <% if (emailError) { %>
                        <div class="invalid-feedback"><%= emailError.msg %></div>
                    <% } %>
                <% } %>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" 
                       id="password" 
                       name="password" 
                       class="<%= (typeof errors !== 'undefined' && errors.some(e => e.param === 'password')) ? 'is-invalid' : '' %>"
                       required>
                <% if (typeof errors !== 'undefined') { %>
                    <% const passwordError = errors.find(e => e.param === 'password'); %>
                    <% if (passwordError) { %>
                        <div class="invalid-feedback"><%= passwordError.msg %></div>
                    <% } %>
                <% } %>
            </div>
            
            <button type="submit" class="auth-button">Login</button>
        </form>
        
        <p class="auth-link">Don't have an account? <a href="/register">Register here</a></p>
    </div>
</body>
</html>